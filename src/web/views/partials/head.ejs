        text-decoration: underline
    }

    .custom-select-wrapper {
        position: relative;
        user-select: none;
        width: 40rem
    }

    .dinput {
        background: #303338;
        border: 1px solid rgba(0, 0, 0, 0.3) !important;
        padding: .78rem;
