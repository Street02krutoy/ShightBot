                    const a = await res.json();
                    document.getElementById("login").innerHTML = `${a.username}#${a.discriminator} <a href = "/api/logout"><img style = "width: 1vw; height: 1vw;"  src = "https://cdn.discordapp.com/attachments/918435846259109891/959173911692603474/unknown.png"></a>`;
                }
            })
        ))()
        const pause = ms => new Promise(resolve => setTimeout(resolve, ms));
    </script>
</header>